<%- include('../partials/header') %>

<div class="container">
  <h1 class="mt-3">Show All Cohorts</h1>
  <div class="row justify-content-center justify-content-md-start">
  <% cohorts.forEach((cohort) =>{ %>
  <div class="card mx-2 my-2 col-md-4 col-lg-auto" style="width: 18rem">
    <div class="card-body">
      <div class="d-flex flex-row">
        <% if (cohort.logo_url === '') { %>
            <img
          class="rounded-circle w-25 mr-2 my-2"
          src='/image/no-image.jpg'
          alt="<%= cohort.name_of_team %>"
        />
        <% } else { %>
            <img
          class="rounded-circle w-25 mr-2 my-2"
          src='<%= cohort.logo_url %>'
          alt="<%= cohort.name_of_team %>"
        />
        <% } %>
        <h5 class="card-title mt-auto p-2"><%= cohort.name_of_team %></h5>
      </div>
      <p class="card-text ml-2 mt-2"><%= cohort.name_of_members%></p>
      <a href="/cohorts/<%= cohort.id %>" class="btn btn-primary ml-2"
        >Show Cohort</a
      >
    </div>
</div>
    <% }) %>
  </div>
  </div>
  <%- include('../partials/footer') %>
</div>
